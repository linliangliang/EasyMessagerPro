<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/heap"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar"
    android:background="@color/navigation_bar_bg">

    <ImageButton
        android:id="@+id/title_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:src="@drawable/title_btn_back" />

    <ImageButton
        android:id="@+id/main_menu_bn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:src="@drawable/menu_list_icon_arrow" />

    <ImageButton
        android:id="@+id/add_img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/add_friend_img_btn"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="title"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/friend_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/title_btn_r_selector"
        android:src="@drawable/popbar_icon_info"
        android:visibility="gone" />
</RelativeLayout>